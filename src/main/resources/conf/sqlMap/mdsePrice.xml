  <select id="selectMdsePrice" parameterType="com.entity.po.Example.mdse.TMdsePriceExample" resultMap="BaseResultMap">
    select
    <if test="distinct">
      distinct
    </if>
    <include refid="mdse_price_Column_List" />
    from t_mdse_price
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
