  <select id="selectMdseInfoAndMdsePrice" parameterType="com.entity.po.Example.mdse.TMdseInfoExample" resultMap="BaseResultMap">
    select
    <if test="distinct">
      distinct
    </if>
    <include refid="mdse_Info_price_Column_List" />
    from t_mdse_info m left join t_mdse_price p ON m.mdseNo = p.mdseNo
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
    <if test="_parameter == null">
      where 1 = 1
    </if>
    <if test="retailPriceMin != null">
      and m.mdseNo IN (
      SELECT mdseNo FROM t_mdse_price where
      retailPrice &gt;= ${retailPriceMin} AND retailPrice &lt;= ${retailPriceMax})
    </if>
    <if test="orderByClause != null">
      order by m.${orderByClause}
    </if>
  </select>
